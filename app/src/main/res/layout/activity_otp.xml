<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.OtpActivity"
    android:background="#FFDE59">

    <TextView
        android:id="@+id/otp_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/otp_header_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter OTP sent to your mobile number."
        android:textSize="22sp"
        android:paddingStart="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp_header"/>

    <LinearLayout
        android:id="@+id/otp_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp_header_1"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <EditText
            android:layout_width="40dp"
            android:height="40dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="40dp"
            android:height="40dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="40dp"
            android:height="40dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="40dp"
            android:height="40dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="40dp"
            android:height="40dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="40dp"
            android:height="40dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/resend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/otp_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/otp_resend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP ?"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="15dp"
        android:textSize="15dp"
        android:background="@drawable/button_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_time" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="15dp"
        android:textSize="20dp"
        android:background="@drawable/button_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_resend_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>